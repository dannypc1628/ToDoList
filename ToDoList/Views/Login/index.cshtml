@{
    Layout = "~/Views/Shared/_ToDoListLayout.cshtml";
}
@model ToDoList.Models.obj.UsersObj

<div class="text-center">
    <div>
        <form  name="loginFrom">
            <label for="Account">帳號</label>
            <input type="text"  id="Account"/>
            <br />
            <label for="Password">密碼</label>
            <input type="password"  id="Password"/>
            <br />
            <span id="errMsg"></span>
            <br />
            <input type="button" class="btn btn-primary" value="登入" onclick="LoginClick()"/>
            <br>
        </form>


        @*<label for="userName">@Html.DisplayNameFor(model => model.UserText)</label>
        <input type="text" id="userName" />
        <label for="password">@Html.DisplayNameFor(model => model.Password)</label>
        <input type="password" id="password" />
        <input type="submit" onclick="LoginClick()"/>*@
    </div>

    <br />
    @ViewBag.Text
    <br />



    <a class="btn btn-outline-primary" href="/Login/SignUp">註冊帳號</a>

    <br>
    <a class="btn btn-outline-primary" href="/Login/Show">顯示帳號</a>

    <script>
        function LoginClick() {
            console.log('按下登入');         
            $.ajax({
                type: 'POST',
                url: '/Login',
                data: "Account=" + $('#Account').val() +"&Password=" + $('#Password').val(),
                dataType: "JSON",
                error: function () {'連線異常'},
                success: function (returnData) {
                    console.log(returnData.status);
                    if (returnData.status == true) {
                        localStorage.token = returnData.token;
                        document.location.href = "/home";
                    }
                    else {
                        $('#errMsg').text(returnData.errMsg);
                        //console.log('更改文字')
                    }                   
                 }                                
            });
        }
    </script>


</div>

