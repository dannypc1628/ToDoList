@{
    Layout = "~/Views/Shared/_ToDoListLayout.cshtml";
}
@model ToDoList.Models.obj.UsersObj

<div class="col-4"></div>
 <main class="col-4">
        <br>
        <br>

        <div class="text-center">
            <form  name="loginFrom" >
                <div class="form-group">
                    <input type="text"  id="Account" placeholder="帳號" class="form-control" required="required"/>
                
                    <input type="password"  id="Password" placeholder="密碼" class="form-control" required="required" />
                    
                </div>
                <span id="errMsg"></span>
                <br />
                <div class="text-center">
                    <input type="button" class="btn btn-primary text-center" value="登入" onclick="LoginClick()"/>
                </div>
                <br>
            </form>


            @*<label for="userName">@Html.DisplayNameFor(model => model.UserText)</label>
            <input type="text" id="userName" />
            <label for="password">@Html.DisplayNameFor(model => model.Password)</label>
            <input type="password" id="password" />
            <input type="submit" onclick="LoginClick()"/>*@
        </div>

    <br />
    @ViewBag.Text
    <br />


    <div class="text-center">
        <a class="btn btn-outline-primary" href="/Login/SignUp">註冊帳號</a>
    </div>
    <br>
    

    <script>
		$('#Password').keypress(function (e) {
			if (e.which == 13) {
				LoginClick();
		  }
		});
        function LoginClick() {
            console.log('按下登入');         
            $.ajax({
                type: 'POST',
                url: '/Login',
                data: "Account=" + $('#Account').val() +"&Password=" + $('#Password').val(),
                dataType: "JSON",
                error: function () {'連線異常'},
                success: function (returnData) {
                    console.log(returnData.status);
                    if (returnData.status == true) {
                        localStorage.token = returnData.token;
                        document.location.href = "/home";
                    }
                    else {
                        $('#errMsg').text(returnData.errMsg);
                        //console.log('更改文字')
                    }                   
                 }                                
            });
        }
    </script>


</main>
<div class="col-4"></div>
